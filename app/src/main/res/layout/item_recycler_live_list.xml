<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/re_live_channel"
    android:layout_width="450px"
    android:layout_height="80px"
    android:background="@drawable/vod_list_bg_selector"
    android:clipChildren="false"
    android:clipToPadding="false"
    android:focusable="true"
    android:orientation="horizontal">

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/tv_item_recycler_live_number"
        android:layout_width="120px"
        android:layout_height="80px"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="16px"
        android:focusable="false"
        android:gravity="center"
        android:includeFontPadding="false"
        android:maxLines="1"
        android:paddingBottom="12px"
        android:paddingTop="12px"
        android:textColor="@color/white"
        android:textSize="40px" />

    <ImageView
        android:id="@+id/img_item_recycler_live_icon"
        android:layout_width="120px"
        android:layout_height="80px"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginBottom="8px"
        android:layout_marginLeft="136px"
        android:layout_marginTop="8px"
        android:focusable="false"
        android:scaleType="centerCrop" />

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/tv_item_recycler_live_list"
        android:layout_width="wrap_content"
        android:layout_height="80px"
        android:ellipsize="marquee"
        android:focusable="false"
        android:gravity="left"
        android:includeFontPadding="false"
        android:marqueeRepeatLimit="marquee_forever"
        android:paddingBottom="12px"
        android:paddingLeft="16px"
        android:paddingTop="12px"
        android:singleLine="true"
        android:textColor="@color/white"
        android:textSize="48px" />

</com.zhy.autolayout.AutoLinearLayout>