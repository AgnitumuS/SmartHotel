<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_667788"
    android:focusable="false"
    tools:context=".ui.activity.LoginSettingActivity">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:focusable="false"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="50px"
            android:focusable="false"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_server_address"
                android:layout_width="360px"
                android:layout_height="120px"
                android:background="@drawable/btn_radius_bg_shape1"
                android:focusable="false"
                android:gravity="center"
                android:maxLines="1"
                android:text="@string/server_address"
                android:textColor="@color/white"
                android:textSize="48px" />

            <EditText
                android:id="@+id/edit_ip"
                android:layout_width="800px"
                android:layout_height="120px"
                android:layout_marginLeft="40px"
                android:layout_toRightOf="@id/tv_server_address"
                android:background="@drawable/btn_radius_bg_shape1"
                android:focusable="true"
                android:maxLines="1"
                android:nextFocusRight="@+id/btn_submit_ip"
                android:paddingLeft="16px"
                android:textColor="@color/white"
                android:textSize="48px"
                tools:text="http://192.168.1.109:9080/" />

            <Button
                android:id="@+id/btn_submit_ip"
                android:layout_width="240px"
                android:layout_height="120px"
                android:layout_alignBottom="@+id/edit_ip"
                android:layout_marginLeft="40px"
                android:layout_toRightOf="@id/edit_ip"
                android:background="@drawable/btn_radius_bg_selector"
                android:focusable="true"
                android:maxLines="1"
                android:text="@string/submit"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="48px" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:focusable="false"
            android:orientation="horizontal"
            android:visibility="gone">

            <TextView
                android:id="@+id/tv_room_number"
                android:layout_width="300px"
                android:layout_height="120px"
                android:layout_below="@id/tv_server_address"
                android:layout_marginTop="28px"
                android:background="@drawable/btn_radius_bg_shape1"
                android:focusable="false"
                android:gravity="center"
                android:maxLines="1"
                android:text="@string/room_number"
                android:textColor="@color/white"
                android:textSize="36px" />

            <EditText
                android:id="@+id/edit_room"
                android:layout_width="800px"
                android:layout_height="120px"
                android:layout_below="@id/edit_ip"
                android:layout_marginLeft="40px"
                android:layout_marginTop="28px"
                android:layout_toRightOf="@id/tv_room_number"
                android:background="@drawable/btn_radius_bg_shape1"
                android:focusable="true"
                android:maxLines="1"
                android:nextFocusDown="@+id/btn_recovery"
                android:nextFocusRight="@+id/btn_submit_room"
                android:paddingLeft="16px"
                android:text="501"
                android:textColor="@color/white"
                android:textSize="36px" />

            <Button
                android:id="@+id/btn_submit_room"
                android:layout_width="240px"
                android:layout_height="120px"
                android:layout_alignBottom="@+id/edit_room"
                android:layout_below="@id/btn_submit_ip"
                android:layout_marginLeft="40px"
                android:layout_marginTop="28px"
                android:layout_toRightOf="@id/edit_room"
                android:background="@drawable/btn_radius_bg_selector"
                android:focusable="true"
                android:maxLines="1"
                android:text="@string/submit"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="36px" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_keyboard"
            android:layout_width="1600px"
            android:layout_height="120px"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="32px"
            android:focusable="false"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_number_0"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="12px"
                android:layout_marginRight="12px"
                android:layout_weight="1"
                android:background="@drawable/btn_radius_bg_selector"
                android:focusable="true"
                android:text="0"
                android:textColor="@color/white"
                android:textSize="48px" />

            <Button
                android:id="@+id/btn_number_1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="12px"
                android:layout_marginRight="12px"
                android:layout_weight="1"
                android:background="@drawable/btn_radius_bg_selector"
                android:focusable="true"
                android:text="1"
                android:textColor="@color/white"
                android:textSize="48px" />

            <Button
                android:id="@+id/btn_number_2"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="12px"
                android:layout_marginRight="12px"
                android:layout_weight="1"
                android:background="@drawable/btn_radius_bg_selector"
                android:focusable="true"
                android:text="2"
                android:textColor="@color/white"
                android:textSize="48px" />

            <Button
                android:id="@+id/btn_number_3"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="12px"
                android:layout_marginRight="12px"
                android:layout_weight="1"
                android:background="@drawable/btn_radius_bg_selector"
                android:focusable="true"
                android:text="3"
                android:textColor="@color/white"
                android:textSize="48px" />

            <Button
                android:id="@+id/btn_number_4"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="12px"
                android:layout_marginRight="12px"
                android:layout_weight="1"
                android:background="@drawable/btn_radius_bg_selector"
                android:focusable="true"
                android:text="4"
                android:textColor="@color/white"
                android:textSize="48px" />

            <Button
                android:id="@+id/btn_number_5"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="12px"
                android:layout_marginRight="12px"
                android:layout_weight="1"
                android:background="@drawable/btn_radius_bg_selector"
                android:focusable="true"
                android:text="5"
                android:textColor="@color/white"
                android:textSize="48px" />

            <Button
                android:id="@+id/btn_number_6"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="12px"
                android:layout_marginRight="12px"
                android:layout_weight="1"
                android:background="@drawable/btn_radius_bg_selector"
                android:focusable="true"
                android:text="6"
                android:textColor="@color/white"
                android:textSize="48px" />

            <Button
                android:id="@+id/btn_number_7"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="12px"
                android:layout_marginRight="12px"
                android:layout_weight="1"
                android:background="@drawable/btn_radius_bg_selector"
                android:focusable="true"
                android:text="7"
                android:textColor="@color/white"
                android:textSize="48px" />

            <Button
                android:id="@+id/btn_number_8"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="12px"
                android:layout_marginRight="12px"
                android:layout_weight="1"
                android:background="@drawable/btn_radius_bg_selector"
                android:focusable="true"
                android:text="8"
                android:textColor="@color/white"
                android:textSize="48px" />

            <Button
                android:id="@+id/btn_number_9"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="12px"
                android:layout_marginRight="12px"
                android:layout_weight="1"
                android:background="@drawable/btn_radius_bg_selector"
                android:focusable="true"
                android:text="9"
                android:textColor="@color/white"
                android:textSize="48px" />

            <Button
                android:id="@+id/btn_keycode_del"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="12px"
                android:layout_marginRight="12px"
                android:layout_weight="1"
                android:background="@drawable/btn_radius_bg_selector"
                android:focusable="true"
                android:text="del"
                android:textColor="@color/white"
                android:textSize="48px" />
        </LinearLayout>

        <Button
            android:id="@+id/btn_recovery"
            android:layout_width="1200px"
            android:layout_height="120px"
            android:layout_below="@id/ll_keyboard"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="32px"
            android:background="@drawable/btn_radius_bg_selector"
            android:focusable="true"
            android:maxLines="1"
            android:text="@string/recovery_address"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="48px" />

        <LinearLayout
            android:layout_width="1200px"
            android:layout_height="wrap_content"
            android:layout_below="@id/btn_recovery"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="32px"
            android:background="@drawable/btn_radius_bg_shape1"
            android:focusable="false"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="16px">

            <ImageView
                android:layout_width="80px"
                android:layout_height="80px"
                android:layout_marginTop="24px"
                android:focusable="false"
                android:src="@drawable/ic_alert" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16px"
                android:focusable="false"
                android:paddingLeft="16px"
                android:paddingRight="16px"
                android:text="@string/label_setting_host_tips"
                android:textColor="@color/white"
                android:textSize="40px" />

        </LinearLayout>
    </LinearLayout>
</RelativeLayout>