<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_181818"
    tools:context="com.wanlong.iptv.ui.activity.LiveActivity">

    <com.wanlong.iptv.player.LiveVideoPlayer
        android:id="@+id/live_video_player"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <RelativeLayout
        android:id="@+id/relativelayout_channel"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/transparent">

        <LinearLayout
            android:id="@+id/channel_list"
            android:layout_width="800px"
            android:layout_height="match_parent"
            android:layout_marginBottom="250px"
            android:layout_marginLeft="60px"
            android:layout_marginTop="100px"
            android:background="@color/transparent"
            android:orientation="horizontal">

            <android.support.v7.widget.RecyclerView
                android:id="@+id/recycler_live_category"
                android:layout_width="399px"
                android:layout_height="match_parent"
                android:background="@color/color_55ffffff" />

            <View
                android:layout_width="2px"
                android:layout_height="match_parent"
                android:background="@color/transparent" />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/recycler_live_list"
                android:layout_width="399px"
                android:layout_height="match_parent"
                android:background="@color/color_55ffffff" />
        </LinearLayout>


        <RelativeLayout
            android:id="@+id/channel_info"
            android:layout_width="match_parent"
            android:layout_height="200px"
            android:layout_alignParentBottom="true"
            android:background="@color/color_55ffffff">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="200px"
                android:text="CCTV1"
                android:textColor="@color/white"
                android:textSize="64px" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="500px"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="10px"
                    android:text="@string/cctv_news"
                    android:textColor="@color/white"
                    android:textSize="40px" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="10px"
                    android:text="@string/animal_world"
                    android:textColor="@color/white"
                    android:textSize="40px" />
            </LinearLayout>

        </RelativeLayout>

    </RelativeLayout>

</RelativeLayout>
